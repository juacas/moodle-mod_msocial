<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/tcount/db" VERSION="20150602" COMMENT="XMLDB file for Moodle mod/tcount"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="tcount" COMMENT="Describes instances of Twitter Count Module">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="TCount instance ID"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Identificates the course"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Name of tcount instance"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="text format of intro field"/>
        <FIELD NAME="hashtag" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="HashTag to search for"/>
        <FIELD NAME="widget_id" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="id of the widget created at twitter page"/>
        <FIELD NAME="fieldid" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="IAM" SEQUENCE="false" COMMENT="field for the twiter id"/>
        <FIELD NAME="counttweetsfromdate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The initial date of the accounting."/>
        <FIELD NAME="counttweetstodate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The final date after which tweets will no longer be accounted."/>
        <FIELD NAME="grade_expr" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="expression for computing the grade"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tcount_statuses" COMMENT="Stores statuses from twitter">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="TCount statuses record ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="user id  of the author of the tweet"/>
        <FIELD NAME="tweetid" TYPE="char" LENGTH="40" NOTNULL="true" SEQUENCE="false" COMMENT="This defines a unique twitter status id"/>
        <FIELD NAME="tcountid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="TCount module instance ID"/>
        <FIELD NAME="twitterusername" TYPE="char" LENGTH="40" NOTNULL="true" SEQUENCE="false" COMMENT="twitter user name"/>
        <FIELD NAME="hashtag" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="text used in the search"/>
        <FIELD NAME="status" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="serialized JSON status info from twitter"/>
        <FIELD NAME="retweets" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="number of retweets"/>
        <FIELD NAME="favs" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="number of favs"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tcount_tokens" COMMENT="tcount_tokens table retrofitted from MySQL">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="tcount_id" TYPE="int" LENGTH="9" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="token" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="token_secret" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="username" TYPE="char" LENGTH="30" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="errorstatus" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="tcount_id" TYPE="foreign-unique" FIELDS="tcount_id" REFTABLE="tcount" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>